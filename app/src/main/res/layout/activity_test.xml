<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- EditText for entering requests -->
    <EditText
        android:id="@+id/request_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez votre requÃªte"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_alignParentTop="true"/>

    <!-- Button to submit the request -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_edit_text"
        android:layout_marginTop="8dp"
        android:text="Soumettre"/>

    <!-- Button to return -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/submit_button"
        android:text="Retour"/>

    <!-- Layout to display submitted requests -->
    <LinearLayout
        android:id="@+id/request_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/submit_button"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
